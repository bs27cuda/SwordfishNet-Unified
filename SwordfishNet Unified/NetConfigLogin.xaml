<Window x:Class="SwordfishNet_Unified.NetConfigLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordfishNet"
        mc:Ignorable="d"
        Title="Network config" Height="90" Width="300"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="NetConfigPasswordBox" Grid.Row="0" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="18" PasswordChar="×" KeyDown="NetConfigPasswordBox_KeyDown"/>
        <Button x:Name="GoButton" Content="Submit" Grid.Row="1" Height="30" HorizontalAlignment="Stretch" Margin="3" Click="GoButton_Click"/>
    </Grid>
</Window>
