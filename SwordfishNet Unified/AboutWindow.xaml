<Window x:Class="SwordfishNet_Unified.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordfishNet_Unified"
        mc:Ignorable="d"
        Title="About SwordfishNet Unified" 
        Height="320" Width="600"
        Background="{StaticResource Background}"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="Aboutblock" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Stretch" Padding="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Close" Content="Close" Width="150" Height="36" VerticalAlignment="Bottom" Margin="20" Click="CloseWindow"/>
            <Button x:Name="Legal" Content="Legal disclaimer" Width="150" Height="36" VerticalAlignment="Bottom" Margin="20" Click="ShowLegal"/>
        </StackPanel>
    </Grid>
</Window>
