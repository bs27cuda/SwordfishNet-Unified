<Window x:Class="SwordfishNet_Unified.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordfishNet_Unified"
        mc:Ignorable="d"
        Title="About SwordfishNet Unified" Height="300" Width="600">
    <Grid>
        <TextBox x:Name="Aboutblock" TextWrapping="Wrap" VerticalAlignment="Top" Padding="10" FontSize="12" Foreground="Black"/>
        <Button x:Name="Legal" Content="Legal disclaimer" Width="100" Height="30" VerticalAlignment="Bottom" Margin="20" Click="ShowLegal"/>
    </Grid>
</Window>
