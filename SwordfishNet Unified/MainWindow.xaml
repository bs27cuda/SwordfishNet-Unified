<Window x:Class="SwordfishNet_Unified.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordfishNet_Unified"
        mc:Ignorable="d"
        
        Title="Swordfish unified portal"
        Height="800" Width="1200"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="TabItem">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="FontFamily" Value="Segoe Print"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TabControl Background="OrangeRed">
            <TabControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" Columns="0" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </TabControl.ItemsPanel>

            <TabItem Header="Network configuration">
                <Frame x:Name="ServerConfigFrame"/>
            </TabItem>

            <TabItem Header="NAS portal">
                <Frame x:Name="OMVBrowserFrame"/>
            </TabItem>

            <TabItem Header="Terminal">
                <Frame x:Name="TerminalFrame"/>
            </TabItem>

            <TabItem Header="File browser">
                <Frame x:Name="OMVFileExpFrame"/>
            </TabItem>
        </TabControl>
    </Grid>
    
</Window>
