<Window x:Class="SwordfishNet_Unified.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordfishNet_Unified"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Swordfish unified portal"
        MinHeight="800" MinWidth="1200"
        ResizeMode="CanResize">

    
    
    <Grid>
        <TabControl IsTabStop="True">
            
            <TabControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </TabControl.ItemsPanel>

            <TabItem x:Name="ServTab" Header="Network configuration" Grid.Column="0">
                <Frame x:Name="ServerConfigFrame"/>
            </TabItem>

            <TabItem x:Name="NASPortalTab" Header="NAS portal" Grid.Column="1">
                <Frame x:Name="OMVBrowserFrame"/>
            </TabItem>

            <TabItem x:Name="TermTab" Header="Terminal" Grid.Column="2">
                <Frame x:Name="TerminalFrame"/>
            </TabItem>

            <TabItem x:Name="FileExpTab" Header="File browser" Grid.Column="3">
                <Frame x:Name="OMVFileExpFrame"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>