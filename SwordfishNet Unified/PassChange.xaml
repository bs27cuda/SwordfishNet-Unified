<Window x:Class="SwordfishNet_Unified.PassChange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SwordfishNet_Unified"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Title="Change password">

    <Grid Width="400" Height="500" VerticalAlignment="Center" HorizontalAlignment="Center" Background="AliceBlue">

        <StackPanel Margin="20">
            <Label Content="Username:" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameChange" Height="30" FontSize="16" Margin="0,0,0,20"/>

            <Label Content="Password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="OldPassword" Height="30" FontSize="16" Margin="0,0,0,20"/>


            <Label Content="New password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="NewPassword1" Height="30" FontSize="16" Margin="0,0,0,20"/>
            
            <Label Content="Confirm new password:" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="NewPassword2" Height="30" FontSize="16" Margin="0,0,0,20"/>

            <Button x:Name="PassChangeConfirm" Content="CONFIRM" Height="40" FontSize="16" Background="#FFbb11" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
